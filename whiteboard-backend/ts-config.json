{
    "compilerOptions": {
      "target": "ES2020",            
      "module": "ES2020",            
      "moduleResolution": "node",    
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,       
      "strict": true,                
      "skipLibCheck": true,          
      "forceConsistentCasingInFileNames": true,
      "types": ["node"],
      "lib": ["ESNext", "DOM"]
    },
    "include": [
        "*.ts"             
    ],
    "exclude": [
      "node_modules"                 
    ]
  }
  